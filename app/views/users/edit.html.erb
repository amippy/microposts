<%= form_for @user do |f| %>
<div class="attributes">
  <div class="form-body">
    <div class="form-group">
      <%= f.label :name, "Name", class: "control-label" %>
      <%= f.text_field :name, class: "form-control" %>
    </div>
    <div class="form-group">
      <%= f.label :email, "Email", class: "control-label" %>
      <%= f.text_field :name, class: "form-control" %>
    </div>
    <%= fields_for @user_profile do |c| %>
    <div class="form-group">
      <%= c.label :area, "Area", class: "control-label" %>
      <%= c.text_field :area, class: "form-control" %>
    </div>
    <div class="form-group">
      <%= c.label :bio, "Bio", class: "control-label" %>
      <%= c.text_area :bio, class: "form-control" %>
    </div>
  </div>
</div>
<div class="submit">
  <%= f.submit "Submit", class: "btn btn-success" %>
</div>
<% end %>
