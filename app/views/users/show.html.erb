<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <%= gravatar_for @user %>
        <%= @user.name %>
      </h1>
    </section>
    <p>Area:<%= @user_profile.area %></p>
    <p>Bio:<%= @user_profile.bio %></p>
    <% if current_user == @user_profile.user %>
    <%= link_to "Setting", edit_user_path %>
    <% end %>

  </aside>
  <div class="col-md-8">
    <%= render 'follow_form' if logged_in? %>
    <% if @user.microposts.any? %>
    <h3>Microposts (<%= @user.microposts.count %>)</h3>
    <ol class="microposts">
      <%= render @microposts %>
    </ol>
    <% end %>
  </div>
</div>
